<UserControl
    x:Class="Importer.UI.Views.DepartmentPaddingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Margin="10">
        <StackPanel
            Margin="0,0,0,8"
            HorizontalAlignment="Left"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                Width="80"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                Width="80"
                Command="{Binding AddCommand}"
                Content="Add" />
            <Button
                Width="90"
                Command="{Binding SaveCommand}"
                Content="Save All" />
            <Button
                Width="80"
                Command="{Binding DeleteCommand}"
                Content="Delete" />
            <TextBlock
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Foreground="Gray"
                Text="{Binding Status}" />
        </StackPanel>

        <DataGrid
            Margin="0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            HeadersVisibility="Column"
            IsReadOnly="False"
            ItemsSource="{Binding DepartmentPaddings}"
            SelectedItem="{Binding SelectedDepartmentPadding}"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DataDeptNum, UpdateSourceTrigger=PropertyChanged}"
                    Header="Dept Num" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ValueToAddToPLU, UpdateSourceTrigger=PropertyChanged}"
                    Header="Value To Add To PLU" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
