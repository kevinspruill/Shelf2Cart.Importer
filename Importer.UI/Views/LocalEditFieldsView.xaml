<UserControl
    x:Class="Importer.UI.Views.LocalEditFieldsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Importer.UI.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Margin="10">
        <StackPanel
            Margin="0,0,0,8"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                Width="80"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                Height="35"
                Width="90"
                Margin="8,0,0,0"
                Command="{Binding SaveCommand}"
                Content="Save All" />
            <TextBlock
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Foreground="Gray"
                Text="{Binding Status}" />
        </StackPanel>
        <DataGrid
            d:ItemsSource="{d:SampleData}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="14"
            IsReadOnly="False"
            ItemsSource="{Binding LocalEditFields}"
            SelectedItem="{Binding SelectedLocalEditField}">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="20" />
                    <Style.Triggers>
                        <!--  Green for editable when clean  -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsEditable}" Value="True" />
                                <Condition Binding="{Binding IsDirty}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" Value="#FFDFFFD6" />
                        </MultiDataTrigger>
                        <!--  Yellow for dirty (unsaved) regardless of editable value  -->
                        <DataTrigger Binding="{Binding IsDirty}" Value="True">
                            <Setter Property="Background" Value="#FFFFFFC2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Edit_Field, UpdateSourceTrigger=PropertyChanged}"
                    Header="Edit Field" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Editable, UpdateSourceTrigger=PropertyChanged}"
                    Header="Protected"
                    IsReadOnly="True" />
                <DataGridTemplateColumn Width="Auto" Header="Toggle">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Width="80"
                                Margin="5,2"
                                Padding="4"
                                Command="{Binding DataContext.ToggleProtectedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Content="Toggle"
                                FontSize="16" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
