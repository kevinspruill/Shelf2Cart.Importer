<UserControl
    x:Class="Importer.UI.Views.ImporterSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Margin="0,4" Text="Enable Test Mode" />
                <CheckBox
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding TestingEnabled}" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,4"
                    Text="Department Column Name" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,4"
                    Text="{Binding DeptColName}" />

                <TextBlock
                    Grid.Row="2"
                    Margin="0,4"
                    Text="Apply Descriptions to Buttons" />
                <CheckBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding ButtonSameAsDesc}" />

                <TextBlock
                    Grid.Row="3"
                    Margin="0,4"
                    Text="Flush DB before Import" />
                <CheckBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding Flush}" />

                <TextBlock
                    Grid.Row="4"
                    Margin="0,4"
                    Text="Use Proper Case" />
                <CheckBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding ProperCase}" />

                <TextBlock
                    Grid.Row="5"
                    Margin="0,4"
                    Text="Pad PLU by Department" />
                <CheckBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding DepartmentPLU}" />

                <TextBlock
                    Grid.Row="6"
                    Margin="0,4"
                    Text="Use Description Cleanse" />
                <CheckBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="5,4"
                    IsChecked="{Binding DescriptionCleanse}" />

                <TextBlock
                    Grid.Row="7"
                    Margin="0,4"
                    Text="Days to Hold Data Files" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="5,4"
                    Text="{Binding HoldDataFilesDays}" />

                <TextBlock
                    Grid.Row="8"
                    Margin="0,4"
                    Text="Proper Case Fields (one per line)" />
                <TextBox
                    Grid.Row="8"
                    Grid.Column="1"
                    Height="80"
                    Margin="5,4"
                    AcceptsReturn="True"
                    Text="{Binding ProperCaseFieldsText, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />

                <TextBlock
                    Grid.Row="9"
                    Margin="0,4"
                    Text="All Caps Fields (one per line)" />
                <TextBox
                    Grid.Row="9"
                    Grid.Column="1"
                    Height="80"
                    Margin="5,4"
                    AcceptsReturn="True"
                    Text="{Binding AllCapsFieldsText, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />

                <TextBlock
                    Grid.Row="10"
                    Margin="0,4"
                    Text="Find/Replace Fields (one per line)" />
                <TextBox
                    Grid.Row="10"
                    Grid.Column="1"
                    Height="80"
                    Margin="5,4"
                    AcceptsReturn="True"
                    Text="{Binding FindReplaceFieldsText, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="35"
                Margin="0,0,8,0"
                Command="{Binding ReloadCommand}"
                Content="Reload" />
            <Button
                Width="100"
                Command="{Binding SaveCommand}"
                Content="Save" />
        </StackPanel>
    </Grid>
</UserControl>
