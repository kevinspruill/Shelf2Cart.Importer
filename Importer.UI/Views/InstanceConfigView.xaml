<Window
    x:Class="Importer.UI.Views.InstanceConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InstanceConfigView"
    Width="800"
    Height="681"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="Foreground" Value="#145571" />
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,5,0,2" />
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="0,2,0,5" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="0,2,0,5" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="30" />
        </Style>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="20"
            Style="{StaticResource HeaderStyle}"
            Text="Importer Instance Configuration" />
        <ScrollViewer
            Grid.Row="1"
            Margin="0,10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Basic Information" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Name:"
                            Style="{StaticResource LabelStyle}" />
                        <TextBox
                            x:Name="txtName"
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource TextBoxStyle}"
                            Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="10,5,0,2"
                            Content="Enabled:"
                            Style="{StaticResource LabelStyle}" />
                        <CheckBox
                            x:Name="chkEnabled"
                            Grid.Row="0"
                            Grid.Column="3"
                            Margin="0,7,0,5"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Enabled, Mode=TwoWay}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Content="Description:"
                            Style="{StaticResource LabelStyle}" />
                        <TextBox
                            x:Name="txtDescription"
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Style="{StaticResource TextBoxStyle}"
                            Text="{Binding Description, Mode=TwoWay}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Content="Importer Module:"
                            Style="{StaticResource LabelStyle}" />
                        <ComboBox
                            x:Name="cmbImporterModule"
                            Grid.Row="2"
                            Grid.Column="1"
                            ItemsSource="{Binding Modules}"
                            SelectedItem="{Binding ImporterModule, Mode=TwoWay}"
                            Style="{StaticResource ComboBoxStyle}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="10,5,0,2"
                            Content="Customer Process:"
                            Style="{StaticResource LabelStyle}" />
                        <ComboBox
                            x:Name="cmbCustomerProcess"
                            Grid.Row="2"
                            Grid.Column="4"
                            ItemsSource="{Binding CustomerProcesses}"
                            SelectedItem="{Binding CustomerProcess, Mode=TwoWay}"
                            SelectedValue="{Binding CustomerProcess, Mode=TwoWay}"
                            Style="{StaticResource ComboBoxStyle}" />

                    </Grid>
                </GroupBox>
                <GroupBox Header="Module Settings" Style="{StaticResource GroupBoxStyle}">
                    <Grid x:Name="ModuleSettingsGrid">
                        <StackPanel x:Name="FileMonitorSettings" Visibility="{Binding IsFileMonitorSelected, Converter={StaticResource BoolToVis}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Content="Target Path:"
                                    Style="{StaticResource LabelStyle}" />
                                <TextBox
                                    x:Name="txtTargetPath"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"
                                    Text="{Binding TargetPath, Mode=TwoWay}" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Width="80"
                                    Command="{Binding BrowseForTargetCommand}"
                                    Content="Browse..."
                                    Style="{StaticResource ButtonStyle}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Content="Poll Interval (ms):"
                                    Style="{StaticResource LabelStyle}" />
                                <TextBox
                                    x:Name="txtPollInterval"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"
                                    Text="{Binding PollIntervalMs, Mode=TwoWay}" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Content="Allowed Extensions:"
                                    Style="{StaticResource LabelStyle}" />
                                <TextBox
                                    x:Name="txtAllowedExtensions"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"
                                    Text="{Binding AllowedExtensionsText, Mode=TwoWay}"
                                    ToolTip="Comma-separated list (e.g., .csv,.txt,.xml)" />
                                <CheckBox
                                    x:Name="chkIsAdminFile"
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,5"
                                    Content="Is Admin File"
                                    IsChecked="{Binding IsAdminFile, Mode=TwoWay}" />
                                <CheckBox
                                    x:Name="chkUseLogin"
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Margin="0,5,0,5"
                                    Content="Use Login Authentication"
                                    IsChecked="{Binding UseLogin, Mode=TwoWay}" />
                                <StackPanel
                                    x:Name="LoginSettings"
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Visibility="{Binding ShowLoginSettings, Converter={StaticResource BoolToVis}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Content="Username:"
                                            Style="{StaticResource LabelStyle}" />
                                        <TextBox
                                            x:Name="txtLoginUsername"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Style="{StaticResource TextBoxStyle}"
                                            Text="{Binding LoginUsername, Mode=TwoWay}" />
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="10,5,0,2"
                                            Content="Domain:"
                                            Style="{StaticResource LabelStyle}" />
                                        <TextBox
                                            x:Name="txtLoginDomain"
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            Style="{StaticResource TextBoxStyle}"
                                            Text="{Binding LoginDomain, Mode=TwoWay}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Content="Password:"
                                            Style="{StaticResource LabelStyle}" />
                                        <PasswordBox
                                            x:Name="txtLoginPassword"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Height="25"
                                            Margin="0,2,0,5"
                                            Padding="5" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            x:Name="ApiSettings"
                            d:Visibility="Hidden"
                            Visibility="{Binding IsApiSelected, Converter={StaticResource BoolToVis}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Content="Schedule Type:"
                                    Style="{StaticResource LabelStyle}" />
                                <ComboBox
                                    x:Name="txtApiEndpoint"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource ComboBoxStyle}"
                                    Text="{Binding ScheduleType, Mode=TwoWay}">

                                    <ComboBoxItem Content="Cron Schedule" />
                                    <ComboBoxItem Content="TimeSpan" />
                                </ComboBox>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Content="Schedule String:"
                                    Style="{StaticResource LabelStyle}" />
                                <TextBox
                                    x:Name="txtApiKey"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"
                                    Text="{Binding ScheduleInterval, Mode=TwoWay}" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Templates Presets" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="cmbTemplates"
                            Grid.Column="0"
                            DisplayMemberPath="DisplayName"
                            ItemsSource="{Binding Templates}"
                            SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                            Style="{StaticResource ComboBoxStyle}" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding LoadTemplateCommand}"
                            Content="Load Template"
                            Style="{StaticResource ButtonStyle}" />
                        <Button
                            Grid.Column="2"
                            Command="{Binding SaveTemplateCommand}"
                            Content="Save as Template"
                            Style="{StaticResource ButtonStyle}" />
                        <Button
                            Grid.Column="3"
                            Command="{Binding ExportConfigCommand}"
                            Content="Export Config"
                            Style="{StaticResource ButtonStyle}" />
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding ValidateCommand}"
                Content="Validate"
                Style="{StaticResource ButtonStyle}" />
            <Button
                Command="{Binding TestConfigCommand}"
                Content="Test Configuration"
                Style="{StaticResource ButtonStyle}" />
            <Button
                Command="{Binding SaveCommand}"
                Content="Save"
                Style="{StaticResource ButtonStyle}" />
            <Button
                Command="{Binding SaveCloseCommand}"
                Content="Save &amp; Close"
                Style="{StaticResource ButtonStyle}" />
            <Button
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
