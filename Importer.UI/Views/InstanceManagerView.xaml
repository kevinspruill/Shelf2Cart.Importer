<UserControl
    x:Class="Importer.UI.Views.InstanceManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Importer.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,5,0,10" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Height" Value="28" />
        </Style>

        <Style x:Key="StatusBarStyle" TargetType="StatusBar">
            <Setter Property="Background" Value="#ECF0F1" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="0,1,0,0" />
        </Style>

        <!--  DataGrid Styles  -->
        <Style TargetType="DataGrid">
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#E9ECEF" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="BorderBrush" Value="#2C3E50" />
            <Setter Property="BorderThickness" Value="0,0,1,0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Menu Bar  -->
        

        <!--  Header  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,10"
            HorizontalAlignment="Center"
            Style="{StaticResource HeaderStyle}"
            Text="Importer Instance Manager" />

        <!--  Toolbar  -->
        <ToolBarTray Grid.Row="2" Background="#ECF0F1">
            <ToolBar Background="Transparent" ToolBarTray.IsLocked="True">
                <Button Content="New Instance" Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Create a new importer instance</Button.ToolTip>
                </Button>
                <Separator />
                <Button
                    x:Name="btnEdit"
                    Content="Edit"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Edit selected instance</Button.ToolTip>
                </Button>
                <Button
                    x:Name="btnDuplicate"
                    Content="Duplicate"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Duplicate selected instance</Button.ToolTip>
                </Button>
                <Button
                    x:Name="btnDelete"
                    Content="Delete"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Delete selected instance</Button.ToolTip>
                </Button>
                <Separator />
                <Button
                    x:Name="btnStart"
                    Content="Start"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Start selected instance</Button.ToolTip>
                </Button>
                <Button
                    x:Name="btnStop"
                    Content="Stop"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Stop selected instance</Button.ToolTip>
                </Button>
                <Separator />
                <Button Content="Import Config" Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Import configuration from file</Button.ToolTip>
                </Button>
                <Button
                    x:Name="btnExport"
                    Content="Export Config"
                    Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Export selected configuration</Button.ToolTip>
                </Button>
                <Separator />
                <Button Content="Refresh" Style="{StaticResource ToolbarButtonStyle}">
                    <Button.ToolTip>Refresh instance list</Button.ToolTip>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!--  Main Content  -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Instance List  -->
            <GroupBox Grid.Column="0" Header="Importer Instances">
                <DataGrid x:Name="dgInstances">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="60"
                            Binding="{Binding Status}"
                            Header="Status">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="Running">
                                            <Setter Property="Foreground" Value="Green" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Trigger>
                                        <Trigger Property="Text" Value="Stopped">
                                            <Setter Property="Foreground" Value="Red" />
                                        </Trigger>
                                        <Trigger Property="Text" Value="Error">
                                            <Setter Property="Foreground" Value="Orange" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridCheckBoxColumn
                            Width="60"
                            Binding="{Binding Enabled}"
                            Header="Enabled" />

                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Name}"
                            Header="Name" />

                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding ImporterModule}"
                            Header="Module" />

                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding CustomerProcess}"
                            Header="Customer Process" />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Description}"
                            Header="Description" />

                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding LastRun, StringFormat='yyyy-MM-dd HH:mm'}"
                            Header="Last Run" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!--  Splitter  -->
            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#BDC3C7"
                ShowsPreview="True" />

            <!--  Instance Details  -->
            <GroupBox Grid.Column="2" Header="Instance Details">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsPanel" Margin="5">
                        <!--  Basic Info  -->
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Basic Information" />

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Name:" />
                            <TextBlock
                                x:Name="lblDetailName"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Module:" />
                            <TextBlock
                                x:Name="lblDetailModule"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Status:" />
                            <TextBlock
                                x:Name="lblDetailStatus"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Enabled:" />
                            <TextBlock
                                x:Name="lblDetailEnabled"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Customer:" />
                            <TextBlock
                                x:Name="lblDetailCustomer"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="5,2" />
                        </Grid>

                        <!--  Description  -->
                        <TextBlock
                            Margin="0,10,0,5"
                            FontWeight="Bold"
                            Text="Description" />
                        <TextBlock
                            x:Name="lblDetailDescription"
                            Margin="0,0,0,10"
                            TextWrapping="Wrap" />

                        <!--  Type Settings  -->
                        <TextBlock
                            Margin="0,10,0,5"
                            FontWeight="Bold"
                            Text="Configuration Settings" />
                        <TreeView
                            x:Name="tvSettings"
                            Height="200"
                            Margin="0,0,0,10">
                            <TreeView.Resources>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True" />
                                </Style>
                            </TreeView.Resources>
                        </TreeView>

                        <!--  Statistics  -->
                        <TextBlock
                            Margin="0,10,0,5"
                            FontWeight="Bold"
                            Text="Statistics" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Last Run:" />
                            <TextBlock
                                x:Name="lblDetailLastRun"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Files Processed:" />
                            <TextBlock
                                x:Name="lblDetailFilesProcessed"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,2" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,2"
                                FontWeight="SemiBold"
                                Text="Records Imported:" />
                            <TextBlock
                                x:Name="lblDetailRecordsImported"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5,2" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
