<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Primary Colors  -->
    <Color x:Key="Primary.Blue">#145571</Color>
    <Color x:Key="Primary.Green">#99CA3C</Color>

    <!--  Secondary Colors  -->
    <Color x:Key="Secondary.DarkOrange">#DA6927</Color>
    <Color x:Key="Secondary.Orange">#F9A134</Color>
    <Color x:Key="Secondary.DarkGray">#7E8C91</Color>
    <Color x:Key="Secondary.Gray">#D9D9D9</Color>

    <!--  Brushes  -->
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Primary.Blue}" />
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Primary.Green}" />
    <SolidColorBrush x:Key="DarkOrangeBrush" Color="{StaticResource Secondary.DarkOrange}" />
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource Secondary.Orange}" />
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource Secondary.DarkGray}" />
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Secondary.Gray}" />

</ResourceDictionary>